<% if @puppy.errors.any? %>
	<% @puppy.errors.full_messages.each do |error| %>
		<p style="color:red"><%=error %></p>
		<% end %>
<% end %>

<%= form_for @puppy, :html => {:class => "form-horizontal center"} do |f| %>
	<div class="form-group">
		<%= f.label "Name", class: "col-md-4 control-label"  %>
		
		<%= f.text_field :name, autofocus: true %><br/>
		</div>

	<div class="form-group">
    <%= f.label "Age", class: "col-md-4 control-label"  %>
    
    <%= f.text_field :age%>
    </div>

   <div class="form-group">
    <%= f.label "Breed", class: "col-md-4 control-label"  %>
    
		<%= f.text_field :breed %><br/>
		</div>

	<div class="form-group">
		<%= f.label "Biography", class: "col-md-4 control-label"  %>
		
		<%= f.text_field :bio %><br/>
		</div>

	<div class="form-group">
	  <%= f.label "Image (URL)", class: "col-md-4 control-label"  %>
	  
		<%= f.text_field :image %><br/>
		</div>

	<div class="col-md-6 control-label">
   	<%= f.submit "Add Puppy", class: "btn btn-default btn-primary"%>
</div>
<% end %>
